<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Log In</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" novalidate class="submit-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input required class="form-control" type="text" name="username" id="name" placeholder="Name">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input required class="form-control" type="password" name="password" id="password"
                        placeholder="Password">
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
