<% layout('/layouts/boilerplate') %>
    <link rel="stylesheet" href="/styleshteet/style.css">
    <div class="row">
        <div class="col-6 mb-2">
            <div class="card" style="width: 30vw;">
                <h2 class="text-center" style="color:red">
                    <u>
                        <%=`Camp by ${author.name}` %>
                    </u>
                </h2>
               <div id='map' style='width: 320px; height: 300px;'></div>
                <h3 class="text-center">
                    <%= campground.title %>
                </h3>
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <% campground.images.forEach((img, i )=>{ %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                <img src="<%= img.url %>">
                            </div>
                            <% }) %>
                    </div>
                    <% if(campground.images.length > 1){ %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
                  </div>
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                           
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <u>
                            <%= `State - ${campground.state}` %>
                        </u>
                    </h5>
                    <h5 class="card-title">
                        <u>
                            <%= `Location - ${campground.location}` %>
                        </u>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <h5 class="card-title">
                        <%= campground.price %>
                    </h5>
                    <% if(currentUser && campground.author.equals(currentUser._id)) {%>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary mb-2">Edit</a>
                        <form action="/campgrounds/<%= campground._id %>/delete?_method=DELETE" method="POST">
                            <button class="btn btn-danger mb-2">Delete</button>
                        </form>
                        <% } %>
                            <a href="/campgrounds" class="btn btn-success ">All Campgrounds</a>
                </div>
            </div>
        </div>
        <div class="col-6 mb-2 card">
            <form action="/campgrounds/<%= campground._id%>/reviews" method="POST" novalidate class="submit-form mt-3">
                <u>
                    <h2>Leave a Review</h2>
                </u>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <fieldset class="starability-basic">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="Review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="Review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="Review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="Review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="Review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="Review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea required class="form-control" name="Review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-success">Post</button>
            </form>
            <div class="mt-3">
                <% for(let review of allReviews){%>
                    <ul class="card" id="<%= review._id %>">
                        <h3 style="margin: 0;">
                            <% if(review.author) {%>
                                <li>
                                    Name: <%= review.author.name %>
                                </li>
                                <% } %>
                                    <li>
                                        <p class="starability-result m-0 mt-3  " data-rating="<%= review.rating %>">
                                        </p>
                                    </li>
                                    <li>
                                        Review: <%= review.body %>
                                    </li>

                        </h3>
                        <% if(currentUser && review.author.equals(currentUser._id)) {%>
                            <button onclick="deleteReview(`<%= review._id %>`, `<%= campground._id %>`)"
                                style="width: 7rem;" class=" btn btn-danger mb-2 del-btn">DELETE</button>
                            <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>/edit">
                                <button style="width: 7rem;" class=" btn btn-primary mb-2 edit">edit</button>
                            </form>
                            <% } %>
                    </ul>

                    <% } %>
            </div>

        </div>
    </div>
    <script>

        function deleteReview(revId, campId) {
            let confirmBox = confirm("Are you sure")
            console.log(confirmBox)
            if (confirmBox) {
                fetch(`/campgrounds/${campId}/reviews/${revId}/delete?_method=DELETE`, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                    .then(response => response.json())
                    .then((response) => {
                        console.log(JSON.stringify(response))
                        document.getElementById(revId).remove();

                    })
            }

        }
    </script>
    <script>
        const token = '<%-process.env.MAPBOX_TOKEN%>';
        const campground = <%- JSON.stringify(campground)%>;
    </script>
    <script src="/javascript/showPageMap.js"></script>