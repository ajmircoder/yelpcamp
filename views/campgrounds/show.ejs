<% layout('/layouts/boilerplate') %>
    <div class="row">

        <div class="col-6 mb-2">

            <div class="card" style="width: 30vw;">
                <h1 class="text-center">
                    <%= campgrounds.title %>
                </h1>
                <img src="<%=campgrounds.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <u>
                            <%= `State - ${campgrounds.state}` %>
                        </u>
                    </h5>
                    <h5 class="card-title">
                        <u>
                            <%= `Location - ${campgrounds.location}` %>
                        </u>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description %>
                    </p>
                    <h5 class="card-title">
                        <%= campgrounds.price %>
                    </h5>
                    <a href="/campgrounds/<%= campgrounds._id %>/edit" class="btn btn-primary mb-2">Edit</a>
                    <a href="/campgrounds" class="btn btn-success mb-2">All Campgrounds</a>
                    <form action="/campgrounds/<%= campgrounds._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6 mb-2 card">
            <form action="/campgrounds/<%= campgrounds._id%>/reviews" method="POST" novalidate class="submit-form mt-3">
                <u>
                    <h2>Leave a Review</h2>
                </u>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input required name="review[rating]" class="form-range" min="1" max="5" type="range" id="rating">
                    <div class="valid-feedback">
                        Thanks for the review
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea required class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Post</button>
            </form>
            <div class="mt-3">
                <% for(let review of allReviews){%>
                    <h3 style="margin: 0;">
                        <ul class="card">
                            <li>
                                Rating: <%= review.rating %> *
                            </li>
                            <li>
                                Review: <%= review.body %>
                            </li>
                        </ul>
                        <% } %>
            </div>

        </div>
    </div>
    <style>

    </style>