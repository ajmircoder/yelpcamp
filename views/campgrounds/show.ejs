<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 mb-2">
            <div class="card" style="width: 30vw;">
                <h2 class="text-center" style="color:red">
                    <u><%=`Camp by ${author.name}` %></u>
                </h2>
                <h3 class="text-center">
                    <%= campgrounds.title %>
                </h3>
                <img src="<%=campgrounds.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <u>
                            <%= `State - ${campgrounds.state}` %>
                        </u>
                    </h5>
                    <h5 class="card-title">
                        <u>
                            <%= `Location - ${campgrounds.location}` %>
                        </u>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description %>
                    </p>
                    <h5 class="card-title">
                        <%= campgrounds.price %>
                    </h5>
                    <% if(currentUser && campgrounds.author.equals(currentUser._id)) {%>
                    <a href="/campgrounds/<%= campgrounds._id %>/edit" class="btn btn-primary mb-2">Edit</a>
                    <form action="/campgrounds/<%= campgrounds._id %>/delete?_method=DELETE" method="post">
                        <button class="btn btn-danger mb-2">Delete</button>
                    </form>
                    <% } %>
                    <a href="/campgrounds" class="btn btn-success ">All Campgrounds</a>
                </div>
            </div>
        </div>
        <div class="col-6 mb-2 card">
            <form action="/campgrounds/<%= campgrounds._id%>/reviews" method="POST" novalidate class="submit-form mt-3">
                <u>
                    <h2>Leave a Review</h2>
                </u>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input required name="review[rating]" class="form-range" min="1" max="5" type="range" id="rating" value="1">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea required class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-success">Post</button>
            </form>
            <div class="mt-3">
                <% for(let review of allReviews){%>
                    <ul class="card" id="<%= review._id %>">
                        <h3 style="margin: 0;">
                            <% if(review.author) {%>
                            <li>
                                Name: <%= review.author.name %>
                            </li>
                            <% } %>
                            <li>
                                Rating: <%= review.rating %> *
                            </li>
                            <li>
                                Review: <%= review.body %>
                            </li>
                        </h3>  
                    <% if(currentUser && review.author.equals(currentUser._id)) {%>
                        <button data-rev="<%= review._id %>" data-camp="<%= campgrounds._id %>" style="width: 7rem;"
                            class=" btn btn-danger mb-2 del-btn">DELETE</button>
                        <form action="/campgrounds/<%=campgrounds._id%>/reviews/<%=review._id%>/edit">
                            <button style="width: 7rem;" class=" btn btn-primary mb-2 edit">edit</button>
                        </form>
                        <% } %>
                    </ul>

                    <% } %>
            </div>

        </div>
    </div>
    <script>

        let allDelBtn = document.querySelectorAll('.del-btn');
        for (let btn of allDelBtn) {
            btn.addEventListener('click', (e) => {
                const revId = btn.getAttribute("data-rev");
                const campId = btn.getAttribute('data-camp')

                fetch(`/campgrounds/${campId}/reviews/${revId}/delete?_method=DELETE`, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                    .then(response => response.json())
                    .then((response) => {
                        console.log(JSON.stringify(response))
                        document.getElementById(revId).remove();

                    })
            })
        }



    </script>