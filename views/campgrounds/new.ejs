<% layout('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="submit-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input required class="form-control" type="text" name="campground[title]" id="title">
                </div>
                <div>
                    <label class="form-label" for="location">Location</label>
                    <input required class="form-control" type="text" name="campground[location]" id="location">
                </div>
                <div>
                    <label class="form-label" for="description">Description</label>
                    <textarea required class="form-control" type="text" name="campground[description]" id="description"></textarea>
                </div>
                <div>
                    <label class="form-label" for="state">State</label>
                    <input required class="form-control" type="text" name="campground[state]" id="state">
                </div>
                <div>
                    <label class="form-label" for="img">Image url</label>
                    <input required class="form-control" type="text" name="campground[img]" id="img">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text " id="price-label">$</span>
                        <input required class="form-control" aria-label="price" aria-describedby="price-label" type="text"
                            name="campground[price]" id="price" placeholder="0.00">
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <button class="btn btn-success">Submit</button>
                </div>

                <a class="btn btn-primary" href="/campgrounds">all campgrounds</a>

            </form>
        </div>
    </div>

  