<% layout('/layouts/boilerplate') %>

<div class="col-6 mb-2 card p-2">
    <form action="/campgrounds/<%=campgrounds._id%>/reviews/<%=review._id%>?_method=PUT" method="POST" novalidate class="submit-form mt-3">
        <u>
            <h2>Edit Review</h2>
        </u>
        <div class="mb-3">
            <label class="form-label" for="rating">Rating</label>
            <input value="<%=review.rating%>" required name="review[rating]" class="form-range" min="1" max="5" type="range" id="rating">
            <div class="valid-feedback">
                Thanks for the review
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="body">Review</label>
            <textarea required class="form-control" name="review[body]" id="body" cols="20" rows="2"><%=review.body%>
            </textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Post</button>
    </form>
    </div>
