<% layout('/layouts/boilerplate') %>
    <a href="/campgrounds/new">Create new location</a>
    <h1>all Campgrounds</h1>
    <ul>
        <% for(let campground of campgrounds) { %>
            <div class="card p-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=campground.img%>" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <h5> <%= campground.state %></h5>
                            <h5><%= campground.price %></h5>
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"><%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            

                <% } %>

    </ul>